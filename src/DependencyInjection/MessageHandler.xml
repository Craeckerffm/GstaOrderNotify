<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="GstaOrderNotify\MessageHandler\TelegramHandler">
            <tag name="messenger.message_handler"/>
            <argument type="service" id="GstaOrderNotify\Service\TelegramService"/>
        </service>
        <service id="GstaOrderNotify\MessageHandler\MailHandler">
            <tag name="messenger.message_handler"/>
            <argument type="service" id="GstaOrderNotify\Service\EmailService"/>
            <argument type="service" id="GstaOrderNotify\Util\Logger"/>
        </service>
    </services>

</container>
